#!/usr/bin/env node
var debug = require('debug')('cignagameengine');
var app = require('../app');
var _ = require('lodash');
var Game = require('../game');
var SerialManager = require('../serialmanager');

app.set('port', process.env.PORT || 3000);

var server = app.listen(app.get('port'), function() {
  debug('Express server listening on port ' + server.address().port);
});

var io = require('socket.io')(server);
var data = require('./data/dummy.json');


var counter = 0;

var runFakeGame = function() {
    var game = new Game(io, [{
        name: 'Matt'
    }]);

    var serial = new SerialManager();
    serial.initSerial();
    var stepqueue = serial.startSerial();

    game.start();

    game.on('gameOver', function() {
    	console.log(stepqueue.len());
        delete game;
    });
}


io.on('connection', function (socket) {
    setTimeout(runFakeGame, 5000);
});


